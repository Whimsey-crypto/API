<script>
const privateKey = 'yoGb24Kdi5CGVYtQkQxKHlIRyJc0UWH0uG4Tm2M'; // Replace with your real key

document.querySelector('.uid-input').addEventListener('change', async function() {
    const uid = this.value.trim();
    if (!uid) return;

    try {
        // Fetch economy
        const wealthResp = await fetch(`https://tycoon-2epova.users.cfx.re/wealth/${uid}`, {
            headers: {
                'X-Tycoon-Key': privateKey
            }
        });

        if (!wealthResp.ok) throw new Error('Failed to fetch wealth');
        const wealth = await wealthResp.json();

        document.querySelectorAll('.economy-item')[0].querySelector('.economy-value').textContent = `$${wealth.wallet.toLocaleString()}`;
        document.querySelectorAll('.economy-item')[1].querySelector('.economy-value').textContent = `$${wealth.bank.toLocaleString()}`;

        // Fetch inventory
        const dataResp = await fetch(`https://tycoon-2epova.users.cfx.re/data/${uid}`, {
            headers: {
                'X-Tycoon-Key': privateKey
            }
        });

        if (!dataResp.ok) throw new Error('Failed to fetch inventory');
        const data = await dataResp.json();
        const inventory = data.data?.inventory || {};

        if (Object.keys(inventory).length === 0) {
            document.querySelector('.inventory-area').textContent = 'Empty';
        } else {
            const items = Object.entries(inventory).map(([item, info]) => {
                return `${item} x${info.amount}`;
            }).join(', ');
            document.querySelector('.inventory-area').textContent = items;
        }

    } catch (err) {
        console.error(err);
        alert('Failed to fetch data. Check UID or API key.');
    }
});
</script>
